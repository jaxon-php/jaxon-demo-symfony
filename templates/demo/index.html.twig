{% include 'demo/includes/header.html.twig' %}

    <div class="container-fluid">
        <div class="row" style="margin-top:30px;">
{% include 'demo/includes/nav.html.twig' %}
            <div class="col-sm-9 content">
                <h3 class="page-header">{{ pageTitle }}</h3>
                <div class="row" id="jaxon-html">
                    <div class="col-md-12" jxn-show="{{ appTest|jxnShow }}">
                        Initial content : {{ appTest|jxnHtml }}
                    </div>
                    <div class="col-md-4 margin-vert-10">
                        <select class="form-control" jxn-on="change"
                            jxn-func="{{ appTest.setColor(jq().val())|jxnFunc }}">
                            <option value="black" selected="selected">Black</option>
                            <option value="red">Red</option>
                            <option value="green">Green</option>
                            <option value="blue">Blue</option>
                        </select>
                    </div>
                    <div class="col-md-8 margin-vert-10" jxn-show="{{ rqAppButtons|jxnShow }}">
                    </div>

                    <div class="col-md-12" jxn-show="{{ extTest|jxnShow }}">
                        Initial content : {{ extTest|jxnHtml }}
                    </div>
                    <div class="col-md-4 margin-vert-10">
                        <select class="form-control" jxn-on="change"
                            jxn-func="{{ extTest.setColor(jq().val())|jxnFunc }}">
                            <option value="black" selected="selected">Black</option>
                            <option value="red">Red</option>
                            <option value="green">Green</option>
                            <option value="blue">Blue</option>
                        </select>
                    </div>
                    <div class="col-md-8 margin-vert-10" jxn-show="{{ rqExtButtons|jxnShow }}">
                    </div>
                </div>
            </div> <!-- class="content" -->
       </div> <!-- class="row" -->
    </div>
<div id="jaxon-init">
<script type='text/javascript'>
    /* <![CDATA[ */
    window.onload = function() {
        {{ extTest.sayHello(true)|raw }};
        {{ appTest.sayHello(true)|raw }};
    }
    /* ]]> */
</script>
</div>

{% include 'demo/includes/footer.html.twig' %}
